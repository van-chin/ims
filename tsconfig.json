{
  "files": [],
  "references": [
    // {
    //   "path": "./tsconfig.vite-config.json"
    // },
    {
      "path": "./tsconfig.app.json"
    }
    // {
    //   "path": "./tsconfig.vitest.json"
    // }
  ],

  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"]
    },
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["unplugin-vue-define-options"]
  },

  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "@/stores/modules/*.ts",
    "./vite.config.ts",
    "vite.config.ts"
  ]
}
